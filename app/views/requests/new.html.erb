<div class="page-header">
  <h1>디자인 의뢰하기</h1>
</div>

<% if @request.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">다음과 같은 이유로 의뢰를 완료할 수 없습니다.</h3>
    </div>
    <div class="panel-body">
    <% @request.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg  %></li>
      </ul>
    <% end %>
    </div>
  </div>
<% end %>

<%= form_for @request, url: request_new_path do |f| %>
  <div>
    <%= f.label :usage  %><br />
    <%= f.text_field :usage  %>
  </div>

  <div>
    <%= f.label :design_type  %><br />
    <%= f.select(:design_type, @types)  %>
  </div>

  <div>
    <%= f.label :description  %><br />
    <%= f.text_area :description  %>
  </div>


  <div>
    <%= f.submit "의뢰하기"  %>
  </div>
<% end %>
